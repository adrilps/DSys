<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.MenuButton?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="testes_SD.MovieFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Novo Filme" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="titleField" promptText="Título do Filme" />
    <TextField fx:id="directorField" promptText="Diretor" />
    <TextField fx:id="yearField" promptText="Ano (ex: 2025)" />

    <VBox spacing="5.0">
        <Label text="Gêneros:" />
        <MenuButton fx:id="genreSelector" text="Selecione os Gêneros..." maxWidth="Infinity" />
    </VBox>

    <VBox spacing="5.0">
        <Label text="Sinopse:" />
        <TextArea fx:id="synopsisArea" prefHeight="100.0" wrapText="true" />
    </VBox>

    <Label fx:id="errorLabel" textFill="RED" wrapText="true"/>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button text="Cancelar" onAction="#handleCancel" />
        <Button text="Salvar Filme" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    </HBox>
</VBox>