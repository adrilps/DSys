<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="testes_SD.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="VoteFlix">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <TextField fx:id="ipField" promptText="IP do Servidor" text="127.0.0.1" />
    <TextField fx:id="portField" promptText="Porta" text="12345" />

    <TextField fx:id="userField" promptText="Usuário" />
    <PasswordField fx:id="passField" promptText="Senha" />

    <Button text="Entrar" onAction="#handleLoginButtonAction" maxWidth="Infinity" />
    <Button text="Cadastrar Novo Usuário" onAction="#handleRegisterButtonAction" />

    <Label fx:id="statusLabel" textFill="RED" />
</VBox>